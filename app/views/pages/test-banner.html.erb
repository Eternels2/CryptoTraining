<div class="swiper" data-controller="swiper">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    <div class="swiper-slide">Slide 1</div>
    <div class="swiper-slide">Slide 2</div>
    <div class="swiper-slide">Slide 3</div>
    ...
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- If we need scrollbar -->
  <div class="swiper-scrollbar"></div>
</div>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="carousel-card">
          <div class="d-flex justify-content-center">
            <h1>Lessons</h1>
          </div>
          <div class="logo-card1" >
            <%= link_to "#" do %>
            <%= image_tag("first-card.png") %>
            <% end %>
          </div>
          <p>Take your first step in the Crypto universe, and go to the following lesson.</p>
          <div class="d-flex justify-content-center">
            <%= link_to 'Go to lessons!', pages_path, class: "btn btn-primary"%>
          </div>
      </div>
    </div>
    <div class="carousel-item">
      <div class="carousel-card">
          <div class="d-flex justify-content-center">
            <h1>Charts</h1>
          </div>
          <div class="logo-card2" >
            <%= link_to "#" do %>
            <%= image_tag("second-card.png") %>
            <% end %>
          </div>
          <p>Our top ten todayâ€™s Cryptocurrency Prices by Market Cap.</p>
          <div class="d-flex justify-content-center">
            <%= link_to 'Go to charts!', cryptos_path, class: "btn btn-primary"%>
          </div>
      </div>
    </div>

    <div class="carousel-item">
      <div class="carousel-card">
          <div class="d-flex justify-content-center">
            <h1>Wallets</h1>
          </div>
          <div class="logo-card3" >
            <%= link_to "#" do %>
            <%= image_tag("third-card.png") %>
            <% end %>
          </div>
          <p>Follow the simples steps to create your first wallet online.</p>
          <div class="d-flex justify-content-center">
            <%= link_to 'Go to create a wallet!', pages_path + "?tab=2", class: "btn btn-primary"%>
          </div>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
